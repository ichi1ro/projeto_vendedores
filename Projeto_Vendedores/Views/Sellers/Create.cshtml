@model Projeto_Vendedores.Models.Seller
@{
    ViewData["Title"] = "Create";
}
<h1>@ViewData["Title"]</h1>
<h4>Seller</h4>
<hr/>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="@Model.Name" class="form-label"></label>
                <input asp-for="Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.BirthDate" class="form-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div> 
            <div class="form-group">
                <label asp-for="@Model.BaseSalary" class="form-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>